# =========================
# Server Configuration
# =========================
PORT=4800
MONGO_URL=mongodb+srv://USERNAME:PASSWORD@cluster-url.mongodb.net/DATABASE_NAME
SECRET_KEY=your-secret-key-here
CLIENT_BASE_URL=http://localhost:5173

# =========================
# Gemini API (AI Processing)
# =========================
GEMINI_API_KEY=your-gemini-api-key

# =========================
# Outbound Email (SMTP)
# =========================
SMTP_HOST=smtp.mailgun.org
SMTP_PORT=587
SMTP_USER=postmaster@YOUR_MAILGUN_DOMAIN
SMTP_PASS=your-smtp-password
EMAIL_FROM="Your Name <postmaster@YOUR_MAILGUN_DOMAIN>"

# =========================
# Mailgun Inbound Email / API
# =========================
MAILGUN_API_KEY=your-mailgun-api-key
MAILGUN_DOMAIN=your-mailgun-domain
MAILGUN_BASE_URL=https://api.mailgun.net/v3
MAILGUN_WEBHOOK_SIGNING_KEY=your-mailgun-webhook-signing-key

# =========================
# Inbound Webhook URL
# =========================
# Use ngrok in development or your deployed backend URL
WEBHOOK_PUBLIC_URL=https://your-server-or-ngrok-url/webhooks/mailgun/inbound
